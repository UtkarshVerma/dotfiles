#!/bin/sh

[ -z $DBUS_SESSION_BUS_ADDRESS ] && eval $(dbus-launch --sh-syntax --exit-with-session)
eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
export SSH_AUTH_SOCK
/usr/libexec/polkit-gnome-authentication-agent-1 &
! pidof -s pulseaudio > /dev/null 2>&1 && pulseaudio --start --exit-idle-time=-1 >/dev/null 2>&1

#xrandr --setprovideroutputsource "AMD Radeon(TM) Vega 8 Graphics @ pci:0000:05:00.0" NVIDIA-0
#xrandr --auto

## Startup applications
feh --no-fehbg --bg-scale --randomize -r ~/Pictures/Wallpapers &
mpd &
# mpdas -d
picom &
unclutter -noevents &
clipit -n &
safeeyes -e &
dwmblocks &

exec dwm
