window-theme = system
window-decoration = false
gtk-titlebar = false

font-size = 12
theme = Catppuccin Mocha
font-family = monospace
background-opacity = 0.8

# Does not make sense to inherit working directory on tiling window managers
# where most of the time another terminal will be in focus.
window-inherit-working-directory = false

# Let it run in the background to reduce startup time.
quit-after-last-window-closed = false

# Don't ask for confirmation when closing.
confirm-close-surface = false

# Only focus the terminal on a bell notification.
bell-features = no-system, no-audio, attention, no-title, no-border

# Do not show window size changes on resize.
resize-overlay = never
