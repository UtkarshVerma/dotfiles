#!/bin/sh

notify() {
    icon="audio-input-microphone-symbolic"
    message="The microphone has been unmuted."
    if [ "$1" = "muted" ]; then
        icon="audio-input-microphone-muted-symbolic"
        message="The microphone has been muted."
    fi

    notify-send -h string:x-canonical-private-synchronous:mic -c system -i "$icon" Microphone "$message"
}

pactl set-source-mute @DEFAULT_SOURCE@ toggle || exit

pkill -RTMIN+26 "$STATUSBAR"

if pactl get-source-mute @DEFAULT_SOURCE@ | grep -q yes; then
    notify muted
else
    notify
fi
