#!/bin/sh
# Utility script to get the geometry of a selected region.

selAlpha=0.5
selColor="$(xrdb -get color12)"

hexToRGB() {
    color="$(echo "${1#?}" | tr '[:lower:]' '[:upper:]')"
    mask="${color#??}"
    while [ -n "$color" ]; do
        hex="${color%"$mask"}"

        echo "ibase=16;scale=2; $hex/FF" | bc | tr -d '\n'
        [ -n "$mask" ] && printf ","

        mask="${mask#??}"
        color="${color#??}"
    done
}

if [ "$1" = "full" ]; then
    res="$(xrandr --current | grep -o 'current [0-9]* x [0-9]*' | tr -d 'curent ')"
    echo "$res+0+0"
    exit
fi

slop -l -c "$(hexToRGB "$selColor"),$selAlpha"
