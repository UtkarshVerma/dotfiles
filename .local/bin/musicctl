#!/bin/sh

args="-p spotify,mpv,%any"
case "$(playerctl status $args 2>&1)" in
	"No players found"|"Stopped") ;;
	*)
		case "$1" in
			"seek"|"volume")
                dir=$(printf "%.1s" $1)
                args="position ${2#?}$dir $args"
				;;
			"toggle") args="play-pause $args" ;;
			"prev") args="previous $args" ;;
			*) args=$@ ;;
		esac
		playerctl $args
		exit
		;;
esac

mpc $@ > /dev/null 2>&1
