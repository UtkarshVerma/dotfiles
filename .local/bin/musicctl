#!/bin/bash

case "$(playerctl status 2>&1)" in
	"No players found"|"Stopped") ;;
	*)
		args=( $@ )
		case "$1" in
			"seek"|"volume")
				args[0]="position"
				args[1]="${2#+}+"
				;;
			"toggle") args[0]="play-pause" ;;
			"prev") args[0]="previous" ;;
		esac
		playerctl ${args[@]}
		exit
		;;
esac

mpc $@ > /dev/null 2>&1
