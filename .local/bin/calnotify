#!/bin/sh
# Pretty print notification for upcoming appointments in calcurse.

metadata="$(calcurse --next | tail +2 | sed 's/[ \t]*//')"

event="${metadata#*] }"

eta="${metadata%%]*}"
eta="${eta#[}"
eta=$((${eta#*:}))

notify-send -i office-calendar-symbolic "Upcoming event" "In $eta min:\n$event"
