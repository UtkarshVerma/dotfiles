#!/bin/sh
# Simple script to toggle the touchpad.

notify() {
    icon="touchpad-$1-symbolic"
    message="The touchpad input has been ${1}."
    notify-send -h string:x-canonical-private-synchronous:touchpad -c system \
        -i "$icon" Touchpad "$message"
}

touchpadID="$(xinput list | grep Touchpad | cut -d'=' -f2 | cut -f1)"
if xinput list-props "$touchpadID" | grep "Device Enabled" | grep -q "1$"; then
    xinput disable "$touchpadID"
    notify disabled
    exit
fi

xinput enable "$touchpadID"
notify enabled
