#!/bin/sh

# This script wraps around my frequently used terminals to provide a uniform
# interface.

while [ $# -gt 0 ]; do
    case $1 in
        -n|--name)
            shift;
            case $TERMINAL in
                alacritty) args="$args --class '$1',Alacritty" ;;
                foot) args="$args -a '$1'" ;;
                st) args="$args -n '$1'" ;;
            esac
            ;;
        -d|--dir)
            shift;
            case $TERMINAL in
                alacritty|foot) args="$args --working-directory '$1'" ;;
                st) args="$args -d '$1'" ;;
            esac
            ;;
        -g)
            shift;
            case $TERMINAL in
                alacritty)
                    columns=${1%x*}
                    lines=${1##*x}
                    args="$args -o window.dimensions.columns=$columns
                        -o window.dimensions.lines=$lines"
                    ;;
                foot) args="$args -W $1" ;;
                st) args="$args -g $1" ;;
            esac
            ;;
        *) args="$args '$1'"
    esac
    shift
done

eval $TERMINAL $args
