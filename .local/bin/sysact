#!/bin/sh
# This script opens a dropdown menu containing system actions.

case "$XDG_CURRENT_DESKTOP" in
    "sway")
        lockCmd="swaylock"
        logoutCmd="swaymsg exit"
        ;;
    "Hyprland")
        lockCmd="swaylock"
        logoutCmd="hyprctl dispatch exit placebo"
        ;;
    *)
        lockCmd="slock"
        logoutCmd="pkill -TERM -u $USER dwm"
        displayOffCmd="xset dpms force off"
        ;;
esac

choices="\
🔒 Lock			$lockCmd
🚪 Logout		$logoutCmd
💤 Sleep		systemctl suspend
🐻 Hibernate	systemctl hibernate
🔃 Reboot		systemctl reboot
💻 Shutdown		systemctl poweroff
📺 Display off	$displayOffCmd"

choice="$(echo "$choices" | awk -F'\t' '{print $1}' | dmenu -i -l 8 -p Choose)" || exit 1
exec $(echo "$choices" | grep "^$choice" | awk -F'\t' '{print $NF}')
