#!/bin/sh
# Open a dropdown menu containing system actions.

set -e

case "$XDG_CURRENT_DESKTOP" in
    dwm)
        logout_cmd="pkill -TERM -u $USER dwm"
        lock_cmd=slock
        display_off_cmd="sleep 0.1 && xset dpms force off"
        ;;
    Hyprland)
        logout_cmd="hyprctl dispatch exit"
        lock_cmd=hyprlock
        display_off_cmd="sleep 0.2 && hyprctl dispatch dpms off"
        ;;
esac

choices="\
ğŸ”’ Lock:$lock_cmd
ğŸšª Logout:$logout_cmd
ğŸ’¤ Sleep:systemctl suspend
ğŸ» Hibernate:systemctl hibernate
ğŸ”ƒ Reboot:systemctl reboot
ğŸ”Œ Shutdown:systemctl poweroff
ğŸ’» Display off:$display_off_cmd
ğŸ”ƒ Reboot (Windows):sudo -A reboot-windows"

choice="$(echo "$choices" | cut -d':' -f1 | menu -i -p "Action:")"
sh -c "$(echo "$choices" | grep "^$choice:" | cut -d':' -f2)"
