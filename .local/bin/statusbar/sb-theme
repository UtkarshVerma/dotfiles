#!/bin/sh
# Utility functions for theming statusbar scripts.

display() {
    if [ -n "$2" ]; then
        color="$2"
    else
        case "$(basename "$0")" in
            sb-mail) color=13 ;;
            sb-music) color=14 ;;
            sb-disk) color=10 ;;
            sb-memory) color=15 ;;
            sb-swap) color=10 ;;
            sb-loadavg) color=11 ;;
            sb-mic) color=9 ;;
            sb-record) color=9 ;;
            sb-volume) color=15 ;;
            sb-battery) color=14 ;;
            sb-date) color=12 ;;
            sb-network) color=9 ;;
            *) color=15 ;;
        esac
    fi

    case "$STATUSBAR" in
        dwmblocks) echo "^C$color^$1" ;;
        waybar)
            # Return output in i3blocks style.
            # https://github.com/Alexays/Waybar/wiki/Module:-Custom#return-type
            printf "%s\n\ncolor%d\n" "$1" "$color"
            ;;
        *) echo "$1" ;;
    esac
}
