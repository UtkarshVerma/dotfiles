#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ðŸ”Œ for plugged up, ðŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "ðŸ”‹ Battery module" "ðŸ”‹: discharging
ðŸ›‘: not charging
â™» : stagnant charge
ï®£: charging
âš¡: charged
â—: battery very low!
- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

. sb-theme

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "

	capacity="$(cat "$battery/capacity" 2>&1)"
	if [ "$capacity" -gt 90 ]; then
		status="ï‰€ "
	elif [ "$capacity" -gt 70 ]; then
		status="ï‰ "
	elif [ "$capacity" -gt 50 ]; then
		status="ï‰‚ "
	elif [ "$capacity" -gt 30 ]; then
		status="ï‰ƒ "
	elif [ "$capacity" -gt 10 ]; then
		status="ï‰ƒ "
	else
		status="ï‰„ "
	fi

	# Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		Full) status="âš¡" ;;
		Discharging) [ "$capacity" -le 20 ] && status="ï„ª$status" ;;
		Charging) status="ï®£$status" ;;
		"Not charging") status="ï®¤$status" ;;
		Unknown) status="ï†¸" ;;
		*) exit 1 ;;
	esac

	# Prints the info
	display -n "$status $capacity%"
done && echo
