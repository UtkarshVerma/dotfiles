#!/bin/sh
# Display disk usage for both `/` and `/home`.

case $BLOCK_BUTTON in
    6) terminal -e "$EDITOR" "$0" ;;
esac

. sb-theme

path="/"
icon="ó°‹Š"

used_bytes="$(df --output=avail "$path" | tail -n 1)"
used_gibs="$(echo "scale=1; $used_bytes / 1024 / 1024" | bc)"

percent_used="$(df --output=pcent "$path" | tail -n 1 | grep -o '[[:digit:]]\+')"
[ "$percent_used" -ge 90 ] && color=9

display "$icon ${used_gibs}G" "$color"
